{% extends 'base.html.twig' %}

{% block title %}Add an URL{% endblock %}

{% block body %}
    <h1>Add URL to be filtered</h1>

    <div id="filtered-add">
        {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="row">
            <div class="col-lg-12">
                {{ form_errors(form.url) }}
                <div class="input-group">
                    {{ form_widget(form.url, {'attr': { 'class': 'form-control', 'placeholder': 'URL to add...', 'aria-label': form.url.vars.label }}) }}
                    <span class="input-group-btn">
                        <button type="submit" value="Save" class="btn btn-primary">Save</button>
                    </span>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

